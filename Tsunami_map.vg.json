{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/Hassan-Almahdawi/FIT3179_project2_Final/main/data_filtered_tsunami_map.csv"
  },
  "title": "Tsunamis (1950-2017)",
  "background": "rgb(232, 241, 254)",
  "vconcat": [
    {
      "hconcat": [
        {
          "width": 600,
          "height": 300,
          "projection": {"type": "equalEarth", "rotate": [-150, 0, 0]},
          "layer": [
            {
              "data": {
                "url": "https://raw.githubusercontent.com/Hassan-Almahdawi/FIT3179_project2_Final/main/ne_110m_admin_0_countries.json",
                "format": {
                  "type": "topojson",
                  "feature": "ne_110m_admin_0_countries"
                }
              },
              "mark": {
                "type": "geoshape",
                "fill": "silver",
                "stroke": "white"
              }
            },
            {
              "data": {
                "url": "https://raw.githubusercontent.com/Hassan-Almahdawi/FIT3179_project2_Final/main/oceans.topojson",
                "format": {"type": "topojson", "feature": "oceans"}
              },
              "mark": {"type": "geoshape", "fill": "skyblue"}
            },
            {
              "data": {
                "url": "https://raw.githubusercontent.com/Hassan-Almahdawi/FIT3179_project2_Final/main/WorldMapWithGraticules.topojson",
                "format": {
                  "type": "topojson",
                  "feature": "ne_110m_graticules_30"
                }
              },
              "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
            },
            {
              "transform": [{"filter": {"param": "time_brush"}}],
              "encoding": {
                "longitude": {"field": "longitude", "type": "quantitative"},
                "latitude": {"field": "latitude", "type": "quantitative"},
                "color": {
                  "field": "height",
                  "type": "quantitative",
                  "title": "Maximum Height",
                  "scale": {
                    "type": "threshold",
                    "domain": [0.1, 0.5, 2, 5, 10, 20, 50],
                    "range": [
                      "#fef0d9",
                      "#fdd49e",
                      "#fdbb84",
                      "#fc8d59",
                      "#ef6548",
                      "#d7301f",
                      "#990000"
                      






                    ]
                  }
                },
                "tooltip": [
                  {"field": "time", "type": "temporal"},
                  {"field": "height", "type": "quantitative", "title": "height (m)"},
                  {"field": "place", "type": "nominal"},
                  {"field": "mag", "type": "quantitative"}
                ]
              },
              "layer": [
                {"mark": {"type": "circle", "opacity": 0.7, "size": 30}},
                {
                  "transform": [
                    {
                      "window": [{"op": "rank", "as": "ranking"}],
                      "sort": [{"field": "height", "order": "descending"}]
                    },
                    {"filter": "datum.ranking == 1"},
                    {
                      "calculate": "'The worst wave height of; the selected period: ' + datum['height']",
                      "as": "text_annotation_raw"
                    },
                    {
                      "calculate": "split(datum.text_annotation_raw, ';')",
                      "as": "text_annotation"
                    }
                  ],
                  "layer": [
                    {
                      "mark": {
                        "type": "point",
                        "size": 200,
                        "shape": "M0,.5L.6,.8L.5,.1L1,-.3L.3,-.4L0,-1L-.3,-.4L-1,-.3L-.5,.1L-.6,.8L0,.5Z"
                      },
                      "encoding": {
                        "color": {
                          "field": "height",
                          "type": "quantitative",
                          "legend": null
                        }
                      }
                    },
                    {
                      "mark": {
                        "type": "text",
                        "align": "right",
                        "dx": -8,
                        "dy": -8,
                        "baseline": "middle",
                        "fontStyle": "italic"
                      },
                      "encoding": {"text": {"field": "text_annotation"}}
                    }
                  ]
                }
              ],
              "resolve": {"scale": {"color": "independent"}}
            }
          ]
        },
        {
          "width": 400,
          "height": 280,
          "transform": [
            {
              "bin": {"step": 1, "extent": [0, 6]},
              "field": "height",
              "as": "Height_mag"
            }
          ],
          "mark": "area",
          "encoding": {
            "x": {
              "field": "time",
              "timeUnit": "year",
              "scale": {"domain": {"param": "time_brush"}},
              "axis": {"title": "", "tickCount": 7, "grid": false}
            },
            "y": {"aggregate": "count", "title": "Count of Tsunamis"},
            "color": {
              "field": "Height_mag",
              "scale": {
                "range": [
                      "#fef0d9",
                      "#fdd49e",
                      "#fdbb84",
                      "#fc8d59",
                      "#ef6548",
                      "#d7301f",
                      "#990000"]
              },
              "legend": null
            }
          }
        }
      ]
    },
    {
      "width": 1200,
      "height": 60,
      "mark": {"type": "line", "color": "#0939be"},
      "title": "Use this line chart to filter out the data based on time",
      "params": [
        {
          "name": "time_brush",
          "select": {"type": "interval", "encodings": ["x"]}
        }
      ],
      "encoding": {
        "x": {
          "field": "time",
          "timeUnit": "yearmonth",
          "axis": {"title": "", "format": "%Y"}
        },
        "y": {
          "aggregate": "count",
          "axis": {"tickCount": 5, "grid": false},
          "title": "Count"
        }
      }
    }
  ],
  "config": {"title": {"font": "sans-serif", "fontSize": 16}}
}
